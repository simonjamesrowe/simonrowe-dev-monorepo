# Brevo SMTP relay password
# Used by: backend (spring.mail.password)
BREVO_SMTP_PASSWORD=your-brevo-smtp-password

# Google reCAPTCHA v2 secret key (server-side verification)
# Used by: backend (contact.recaptcha.secret-key)
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key

# Google reCAPTCHA v2 site key (client-side widget)
# Used by: frontend build arg (VITE_RECAPTCHA_SITE_KEY) -- baked into image at build time
VITE_RECAPTCHA_SITE_KEY=your-recaptcha-site-key

# API base URL for frontend (defaults to http://localhost:8080 in .env.development)
# Used by: frontend (VITE_API_BASE_URL) -- set to empty string in production (nginx proxies /api/)
# VITE_API_BASE_URL=http://localhost:8080

# CORS allowed origins for backend (defaults to http://localhost:5173 for local dev)
# Used by: backend (cors.allowed-origins) -- set to empty string in production (same-origin via nginx)
# CORS_ALLOWED_ORIGINS=http://localhost:5173
